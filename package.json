{
  "name": "bach.software",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.18.3",
  "description": "Bach Software - A personal blog and portfolio website",
  "author": "Jeroen Bach",
  "engines": {
    "node": ">=18.0.0 <24.0.0",
    "pnpm": ">=10.18.0 <11.0.0"
  },
  "scripts": {
    "check-updates": "pnpm dlx npm-check-updates -i --format group",
    "dev-setup": "node development-setup.js",
    "i18n-extract": "vue-i18n-extract report --vueFiles './**/*.?(ts|js|vue)' --languageFiles './src/app/locales/*.?(json|yml|yaml|js)' --noEmptyTranslation '*' --add true --remove true",
    "build": "nuxt build",
    "generate": "pnpm run i18n-extract && nuxt generate --dotenv .env.local && pnpm storybook:build",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "dev": "pnpm run i18n-extract && nuxt dev --dotenv .env.local",
    "dev:api": "cd ./src/api/Bach.Software.API && dotnet watch start",
    "dev:static-web-app": "cp staticwebapp.config.json .output/public && swa start .output/public --api-location src/api/Bach.Software.API",
    "ssg": "nuxt generate && pnpm run serve",
    "serve": "pnpm dlx serve ./.output/public/",
    "serve:storybook": "pnpm dlx http-server ./.output/public/_storybook/standalone/ -p 6006",
    "test": "TZ=Europe/Amsterdam vitest -w",
    "playwright": "playwright test --config=playwright.config.ts",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "check": "pnpm ci:lint && pnpm ci:typecheck",
    "ci:test": "TZ=Europe/Amsterdam vitest run",
    "ci:playwright": "playwright test --config=playwright.config.ci.ts",
    "ci:playwright:docker": "colima start && docker run --rm -v $(pwd):/work -w /work -e CI=true -e COREPACK_INTEGRITY_KEYS= mcr.microsoft.com/playwright:v1.56.0-jammy /bin/bash -c 'corepack enable && pnpm ci:playwright'",
    "ci:playwright:docker:update": "colima start && docker run --rm -v $(pwd):/work -w /work -e CI=true -e COREPACK_INTEGRITY_KEYS= mcr.microsoft.com/playwright:v1.56.0-jammy /bin/bash -c 'corepack enable && pnpm ci:playwright --update-snapshots'",
    "ci:lint": "pnpm lint",
    "ci:typecheck": "nuxi typecheck",
    "storybook": "storybook dev --config-dir ./src/app/.storybook --port 6006 --no-open",
    "storybook:build": "pnpm run storybook:build:integrated && pnpm run storybook:build:standalone",
    "storybook:build:integrated": "storybook build -c ./src/app/.storybook -o ./.output/public/_storybook/",
    "storybook:build:standalone": "VITE_STANDALONE=true storybook build -c ./src/app/.storybook -o ./.output/public/_storybook/standalone"
  },
  "dependencies": {
    "@headlessui/vue": "1.7.23",
    "@heroicons/vue": "2.2.0",
    "@microsoft/kiota-abstractions": "1.0.0-preview.93",
    "@microsoft/kiota-bundle": "1.0.0-preview.93",
    "@microsoft/kiota-http-fetchlibrary": "1.0.0-preview.93",
    "@microsoft/kiota-serialization-json": "1.0.0-preview.93",
    "@vueuse/core": "13.9.0",
    "animate.css": "4.1.1",
    "dayjs": "1.11.18",
    "element-plus": "^2.11.7",
    "luxon": "3.7.2",
    "pinia": "3.0.3",
    "remark-reading-time": "2.0.2",
    "sitemap": "8.0.1",
    "slugify": "1.6.6"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.0.0",
    "@element-plus/nuxt": "^1.1.4",
    "@nuxt/content": "3.7.1",
    "@nuxt/image": "1.11.0",
    "@nuxt/test-utils": "3.19.2",
    "@nuxtjs/color-mode": "3.5.2",
    "@nuxtjs/i18n": "10.1.1",
    "@nuxtjs/plausible": "2.0.1",
    "@nuxtjs/tailwindcss": "6.14.0",
    "@pinia/nuxt": "0.11.2",
    "@playwright/test": "1.56.1",
    "@storybook/addon-a11y": "9.1.13",
    "@storybook/vue3-vite": "9.1.13",
    "@tailwindcss/typography": "0.5.19",
    "@tailwindcss/vite": "^4.1.15",
    "@testing-library/vue": "8.1.0",
    "@types/node": "24.9.1",
    "@vitejs/plugin-vue": "6.0.1",
    "@vue/test-utils": "2.4.6",
    "autoprefixer": "10.4.21",
    "better-sqlite3": "^12.4.1",
    "dayjs-nuxt": "2.1.11",
    "eslint": "^9.38.0",
    "eslint-plugin-format": "^1.0.2",
    "front-matter": "4.0.2",
    "happy-dom": "20.0.7",
    "inquirer": "12.10.0",
    "marked": "16.4.1",
    "nuxt": "4.1.3",
    "playwright-core": "1.56.1",
    "postcss": "8.5.6",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "0.7.1",
    "sass": "1.93.2",
    "schema-dts": "1.1.5",
    "storybook": "9.1.13",
    "tailwindcss": "4.1.15",
    "typescript": "5.9.3",
    "ufo": "^1.6.1",
    "unplugin-auto-import": "20.2.0",
    "vite": "7.1.11",
    "vite-plugin-vue-devtools": "8.0.3",
    "vite-plugin-vue-markdown": "0.23.8",
    "vitest": "3.2.4",
    "vue": "3.5.22",
    "vue-i18n": "11.1.12",
    "vue-i18n-extract": "2.0.7",
    "yaml": "2.8.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "@parcel/watcher",
      "esbuild",
      "sharp"
    ]
  }
}
